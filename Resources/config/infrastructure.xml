<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="WideMorph\Morph\Bundle\MorphViewBlockBundle\Infrastructure\EventSubscriber\BlockEventSubscriber">
            <argument type="service"
                      key="$domainInteraction"
                      id="WideMorph\Morph\Bundle\MorphViewBlockBundle\Interaction\DomainInteractionInterface"/>
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="WideMorph\Morph\Bundle\MorphViewBlockBundle\Infrastructure\Twig\BlockExtension">
            <argument type="service"
                      key="$eventDispatcher"
                      id="Symfony\Component\EventDispatcher\EventDispatcherInterface"/>
            <argument type="service"
                      key="$domainInteraction"
                      id="WideMorph\Morph\Bundle\MorphViewBlockBundle\Interaction\DomainInteractionInterface"/>
            <tag name="twig.extension"/>
        </service>
    </services>
</container>
